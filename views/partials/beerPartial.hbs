<!-- beerPartial.hbs -->
<div class="col-md-4 beer">
      <img
        class="card-img-top mx-auto d-block"
        src="{{ this.image_url }}"
        alt="Card image cap"
      />
      <div class="card-body">
        <h4 class="card-title"><b>{{ this.name }}</b></h4>
        <h6 class="card-tagline">{{ this.tagline }}</h6>
        <p class="card-text">{{ this.description }}</p>
      </div>
    </div>